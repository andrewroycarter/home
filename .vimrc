set term=ansi

set enc=utf-8
set fenc=utf-8
set termencoding=utf-8

set nocompatible
set autoindent
set smartindent

set tabstop=2
set shiftwidth=2
set expandtab

set t_Co=256
syntax enable
filetype plugin indent on

set backspace=indent,eol,start

set hlsearch
set incsearch
set ignorecase
set smartcase

set number

set showmatch

set comments=s1:/*,mb:\ *,elx:\ */
